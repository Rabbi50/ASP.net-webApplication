<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Hello" Height="350" Width="525">
    <Grid Margin="0,0,2,0">
       
        <TextBlock HorizontalAlignment="Left" Margin="111,64,0,0" TextWrapping="Wrap" Text="Please Enter Your Name" VerticalAlignment="Top" FontSize="20" Grid.Column="1" Height="27" Width="209"/>
        <TextBox x:Name="userName" HorizontalAlignment="Left" Height="23" Margin="128,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Button x:Name="ok" Content="Ok" HorizontalAlignment="Left" Margin="305,144,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Height="20" Click="okClick"/>
    </Grid>
</Window>
